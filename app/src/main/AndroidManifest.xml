<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Attractions"
            android:label="@string/activity_attractions" />
        <activity
            android:name=".Shopping"
            android:label="@string/activity_shopping" />
        <activity
            android:name=".Restaurants"
            android:label="@string/category_restaurant" />
        <activity
            android:name=".NightLife"
            android:label="@string/activity_nightLife" />
    </application>

</manifest>